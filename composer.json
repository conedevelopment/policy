{
    "name": "thepinecode/policy",
    "description": "Using Laravel's authorization on the front-end.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Cone Development",
            "email": "hello@conedevelopment.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pine\\Policy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pine\\Policy\\Tests\\": "tests/",
            "Pine\\Policy\\Tests\\Factories\\": "tests/factories/"
        }
    },
    "require": {
        "php" : "^7.2.5",
        "laravel/framework": "^6.0 || ^7.0 || ^8.0"
    },
    "require-dev": {
        "laravel/laravel": "dev-master",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pine\\Policy\\PolicyServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true
}
